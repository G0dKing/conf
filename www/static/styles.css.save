/** styles.css **/

/** 0. Global Reset **/
html {
    box-sizing: borderbox;
}
*,*:before,*:after {
    box-sizing: inherit;
}
* {
    margin: 0;
    padding: 0;
    line-height: calc(1em + 0.5rem);
    -webkit-font-smoothing: antialiased;
}
body {
    width: 100%;
    height: 100%;
}
img,video,canvas,svg {
    display: block;
    max-width: 100%;
}
input,button,textarea,select {
    font: inherit;
}
p,h1,h2,h3,h4,h5,h6 {
    overflow-wrap: break-word;
}

.container {
    height: 100vh;
    max-width: 100%;
    top: 0;
    left: 0;
}
